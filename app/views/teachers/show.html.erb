<h3 class='form-title'><%= t('.show_teacher') %></h3>
<div class='center show-card form-card mdl-card mdl-shadow--3dp'>
  <div class='field mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
    <%= label_tag Teacher.human_attribute_name :name %>
    <h5><%= @teacher.name %></h5>
  </div>
  <div class='field mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
	  <%= Teacher.human_attribute_name :registration %>
	  <h5><%= @teacher.registration %></h5>
	</div>
	<div class='field mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
	  <%= SchoolUnity.model_name.human count: @teacher.school_unities.count %>
	  <ul class="demo-list-item mdl-list">
	  	<% unless @teacher.school_unities %>
		  	<% @teacher.school_unities.each do |s| %>
				  <li class="mdl-list__item">
				    <span class="mdl-list__item-primary-content">
					    <i class="material-icons mdl-list__item-icon">person</i>
					    <%= s.name %>
						</span>
			  	</li>
		  	<% end %>
		  <% else %>
		  	<p> Nenhuma Unidade relacionada </p>
		 	<% end %>
		</ul>
	</div>
</div>